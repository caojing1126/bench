/* pages/publication/publication.wxss */
form, view, input, picker{
  box-sizing: border-box;
}
view {
  position: relative;
}

.contain {
  padding: 10rpx 0;
}

form {
  width: 100%;
}
.text {
  width: 100%;
  padding: 0;
  margin-top: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
}
textarea {
  box-sizing: border-box;
  width: 690rpx;
  margin-left: 30rpx;
  border: 1rpx solid #000;
  padding: 20rpx 20rpx;
  border-radius: 20rpx;
}
.lable {
  position: absolute;
  right: 77%;
}
picker , input {
  border: 1rpx solid #000;
  border-radius: 20rpx;
  width: 72%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0rpx 20rpx;
  position: absolute;
  top: 0;
  right: 30rpx;
}

.image {
  padding: 30rpx;
}
.image view {
  text-align: center;
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
}
.image view image {
  width: 120rpx; 
  height: 120rpx;
}
.image view text {
  display: block;
}
image {
  width: 200rpx;
  height: 200rpx;
  margin: 15rpx;
}