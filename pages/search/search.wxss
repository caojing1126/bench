/* pages/search/search.wxss */
.view ,scroll-view, input {
  box-sizing: border-box;
}

page {
  background:rgba(248,248,248,1);
}
.container {
  padding-top: 23rpx;
  background:rgba(248,248,248,1);
}

.search {
  position: relative;
  padding: 0 30rpx;
  height: 64rpx;
  width: 100%;
}
.search input {
  float: left;
  height: 64rpx;
  width: 600rpx;
  background:rgba(232,232,232,1);
  border-radius: 16px;
  padding-left:50rpx; 
}
.search image {
  z-index: 99;
  position: absolute;
  top: 14rpx;
  left: 40rpx;
  height: 32rpx;
  width: 32rpx;
}
.search text {
  position: absolute;
  top: 12rpx;
  right: 30rpx;
}

.forum {
  margin-top: 69rpx;
  width: 100%;
}
.forumList {
  width: 100%;
  height: 502rpx;
  margin-top: 10rpx;
  padding: 28rpx 30rpx;
  background-color: white;
}
.useravatar {
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}
.money {
  float: right;
  color: #E10C0D;
  font-size: 42rpx;
}
.userName {
  font-size: 32rpx;
}
.time {
  display: block;
  font-size: 24rpx;
  color: #aaa;
}
.mes {
  margin-top: 31rpx;
  margin-bottom: 19rpx;
  font-size: 28rpx;
  color: #333;
}
.goodImage {
  display: flex;
  justify-content: space-around;
}
.goodImage image {
  width: 221rpx;
  height: 190rpx;
  border-radius: 8rpx;
}