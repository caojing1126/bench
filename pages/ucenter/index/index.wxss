/* pages/ucenter/index/index.wxss */
.view {
  box-sizing: border-box;
}
button {
  outline:none;
  border:none;
  list-style: none;
}

page {
  background:rgba(250,247,247,1);
}

.profile-info{
  width: 100%;
  height: 384rpx;
  position: relative;
  font-family:PingFangSC-Regular;
}
.profile-info .avatar{
  position: absolute;
  top: 123rpx;
  left: 30rpx;
  z-index: 99;
  height: 140rpx;
  width: 140rpx;
  border-radius: 50%;
}
.profile-info .avatar_bl{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  filter: blur(10rpx);
}
.profile-info .info{
  position: absolute;
  z-index: 99;
  top: 160rpx;
  left: 196rpx;
}
.profile-info .name{
    color: #333;
    font-size: 34rpx;
}
.profile-info .level{

}

.nav {
  margin-top: 20rpx;
  width: 100%;
}

.navList {
  border-bottom: 1px #eee solid;
  background: #fff;
  padding: 16rpx;
  position: relative;
}
.navIcon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: 0 20rpx;
}
.navList text {
  font-size: 32rpx;
    line-height: 1.75em;
    color: #333;
}
.moreIcon {
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  height: 40rpx;
  width: 40rpx;
}